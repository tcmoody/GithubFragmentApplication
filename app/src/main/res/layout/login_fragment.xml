<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_fragment_layout">

    <ImageView
        android:id="@+id/login_fragment_imageview"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <EditText
        android:id="@+id/login_fragment_username_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_fragment_imageview"
        android:hint="@string/user_login_textentry"
        />

    <Button
        android:id="@+id/login_fragment_enter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_fragment_username_entry"
        android:layout_centerInParent="true"
        android:text="@string/user_login_button" />

</RelativeLayout>